{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "weight": {
      "type": "string"
    },
    "ingredients": {
      "type": "text"
    },
    "allergeny": {
      "type": "string"
    },
    "price": {
      "type": "integer"
    },
    "priority": {
      "type": "integer"
    },
    "additionals": {
      "collection": "additional"
    },
    "product_modifiers": {
      "collection": "product-modifiers"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "isRoll": {
      "type": "boolean",
      "default": false
    },
    "isSalat": {
      "type": "boolean",
      "default": false
    },
    "isDrink": {
      "type": "boolean",
      "default": false
    },
    "isPoke": {
      "type": "boolean"
    },
    "isSet": {
      "type": "boolean"
    }
  }
}
